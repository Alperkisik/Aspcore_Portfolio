                                <li class="breadcrumb-item active">@ViewBag.Page</li>
                            </ol>
                        </div>
                    </div>
                    *@
                </div>
            </div>
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <partial name="@Portfolio.Data.Folders.Footer" />
    </div>
