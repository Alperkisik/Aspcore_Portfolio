    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/Theme/AdminLTE-3.2.0/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <script src="~/Theme/AdminLTE-3.2.0/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Theme/AdminLTE-3.2.0/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Theme/AdminLTE-3.2.0/plugins/sparklines/sparkline.js"></script>
    <script src="~/Theme/AdminLTE-3.2.0/plugins/moment/moment.min.js"></script>
    <script src="~/Theme/AdminLTE-3.2.0/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/Theme/AdminLTE-3.2.0/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/Theme/AdminLTE-3.2.0/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/Theme/AdminLTE-3.2.0/dist/js/adminlte.js"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        let SidebarSection = '@ViewBag.SidebarSection';
        let SidebarSubSection = '@ViewBag.SidebarSubSection';

        $(".nav-link").removeClass("active");
        $(".nav-item").removeClass("menu-open menu-is-opening");
        $("a[name='" + SidebarSection + "']").addClass("active");
        $("li[name='" + SidebarSection + "']").addClass("menu-open menu-is-opening");

        $("a[name='" + SidebarSubSection + "']").addClass("active");
        $("li[name='" + SidebarSubSection + "']").addClass("menu-open menu-is-opening");
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
