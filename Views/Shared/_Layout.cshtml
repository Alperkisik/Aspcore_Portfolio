<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/Theme/AdminLTE-3.2.0/dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
        </div>

        <partial name="@Portfolio.Data.Folders.Header" />
        <partial name="@Portfolio.Data.Folders.Sidebar" />
        @*Nav Bar*@
        @*Header*@

        <div class="content-wrapper">
            <div class="content-header">
                <h1 class="text-center font-weight-bold">@ViewData["Title"]</h1>
                <div class="container-fluid">
                    
                    @*
